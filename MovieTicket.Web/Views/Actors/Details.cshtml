@model MovieTicket.Web.Models.ViewModels.ActorVM.ReadActorVM
@using MovieTicketWebApplication.Repositories.Queries.ADONet.ActorQueries
@inject ActorMoviesDataProvider actorsQuery;

@{
    ViewData["Title"] = "Actor Details";
}

<head>
    <link href="@Url.Content("~/css/Actors/details.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="container actor-details-container border">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="actor-card">
                    <div class="actor-card-header">
                        <h5 class="title">@Model.FirstName @Model.LastName</h5>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <img src="@Model.PictureUrl" alt="@Model.FirstName">
                        </div>
                        <div class="col-md-8">
                            <div class="actor-card-body">
                                <p class="card-text"><strong>Bio: </strong>@Model.Bio</p>
                                <p class="card-text"><b>BirthDate: </b>@Model.BirthDate.ToString("dd MMM yy")</p>
                                <p class="card-text  ">
                                    <b>Movies: </b>

                                    <div class="movie-list d-flex">
                                        @foreach (var movie in actorsQuery.GetMoviesByActorId(@Model.Id, 5, "MYSQL"))
                                        {
                                            <div class="movie-profile">
                                                <img src="@movie.PictureUrl" />
                                                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">@movie.Name</a>
                                            </div>
                                        }
                                    </div>

                                    <div>
                                        <a class="toggle-collapse" data-bs-toggle="collapse" href="#actorsCollapse" role="button" aria-expanded="false" aria-controls="actorsCollapse">
                                            <i class="bi bi-caret-down-fill"></i> Show All
                                        </a>
                                        <div class="collapse" id="actorsCollapse">
                                            <div class="list d-flex flex-wrap mt-2">
                                                @foreach (var movie in actorsQuery.GetMoviesByActorId(Model.Id, 100, "MYSQL"))
                                                {
                                                    <div class="movie-profile">
                                                        <img src="@movie.PictureUrl" />
                                                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">@movie.Name</a>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </p>
                                <hr />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="js/Actors/details.js"></script>
</body>

