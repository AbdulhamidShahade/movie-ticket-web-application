@model List<MovieTicket.Web.Models.ViewModels.MovieVM.ReadMovieVM>

@{
    ViewData["Navbar"] = true;
}


@if (TempData["Success"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
    </div>
}

@if (TempData["Failed"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Failed"]
    </div>
}

<head>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="@Url.Content("~/css/Movies/index.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="container mt-4">
        <h4 class="pb-3">Actors</h4>
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Length</th>
                        <th>Publish Year</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @* <td><input type="checkbox" /></td> *@
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.Length</td>
                            <td>@item.PublishYear</td>
                            <td>@item.StartDate</td>
                            <td>@item.EndDate</td>
                            <td>
                                <a asp-action="Details" asp-controller="Movies" asp-route-id="@item.Id" class="btn btn-primary btn-sm" style="margin-right:0.3rem;">Details</a>
                                <a asp-action="Update" asp-controller="Movies" asp-route-id="@item.Id" class="btn btn-warning btn-sm" style="margin-right:0.3rem;">Update</a>
                                <a asp-action="Delete" asp-controller="Movies" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
    <script src="~/js/Movies/index.js"></script>
</body>

@await Html.PartialAsync("_CreateItem", "Movies")