@model List<MovieTicket.Web.Models.ViewModels.CategoryVM.ReadCategoryVM>

@{
    ViewData["Navbar"] = true;
    ViewData["Title"] = "Category List";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
    </div>
}

@if (TempData["Failed"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Failed"]
    </div>
}

<head>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="@Url.Content("~/css/Categories/index.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="container mt-4">
        <h4 class="pb-3">Categories</h4>
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Category Id</th>
                        <th>Category Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @* <td><input type="checkbox" /></td> *@
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm" style="margin-right:0.3rem;">Details</a>
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm" style="margin-right:0.3rem;">Update</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="js/Categories/index.js"></script>
</body>

@await Html.PartialAsync("_CreateItem", "Categories")