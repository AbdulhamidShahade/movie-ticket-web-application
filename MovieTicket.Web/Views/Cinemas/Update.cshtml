@model MovieTicket.Web.Models.ViewModels.CinemaVM.UpdateCinemaVM

<head>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="@Url.Content("~/css/Cinemas/update.css")" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
</head>

<body>
    <form asp-action="Update">
        <br />
        <div class="container border p-3">
            <h1 class="text-primary">Update Cinema</h1>
            <hr />
            <div class="row">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group text-center">
                    <img id="CinemaLogoPreview" class="border-info rounded-circle" style="max-width: 150px" />
                </div>

                <div class="col-2">
                    <label asp-for="Id" class="control-label" style="font-size:1.3rem"></label>
                </div>
                <div class="col-10 pb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class='bx bx-id-card'></i>
                            </span>
                        </div>
                        <input class="form-control" asp-for="Id" readonly />
                    </div>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>


                <div class="col-2">
                    <label asp-for="Name" class="control-label" style="font-size:1.3rem"></label>
                </div>
                <div class="col-10 pb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class='bx bx-category'></i>
                            </span>
                        </div>
                        <input class="form-control" asp-for="Name" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-2">
                    <label asp-for="Description" class="control-label" style="font-size:1.3rem"></label>
                </div>
                <div class="col-10 pb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class='bx bx-edit'></i>
                            </span>
                        </div>
                        <input class="form-control" asp-for="Description" />
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="col-2">
                    <label asp-for="Logo" class="control-label" style="font-size:1.3rem"></label>
                </div>
                <div class="col-10 pb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class='bx bx-edit'></i>
                            </span>
                        </div>
                        <input class="form-control" asp-for="Logo" />
                    </div>
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>

                <div class="col-5 offset-2">
                    <input type="submit" value="Update" class="btn btn-warning form-control" />
                </div>

                <div class="col-5">
                    <a asp-controller="Categories" asp-action="UserIndex" class="btn btn-outline-primary">Back To Cinemas</a>
                </div>

            </div>

        </div>
    </form>
    <script src="~/js/Cinemas/update.js"></script>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
