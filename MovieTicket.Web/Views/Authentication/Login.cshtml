@model MovieTicket.Models.ViewModels.AuthenticationVM.LoginVM

@{
    ViewData["Title"] = "Login";
}

<head>
    <link href="@Url.Content("~/css/Authentication/login.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Log in to your account</h4>
                    </div>
                    <div class="card-body">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                <b>Sorry!</b> - @TempData["Error"]
                            </div>
                        }

                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="EmailAddress" class="control-label">Email Address</label>
                                <input asp-for="EmailAddress" class="form-control" />
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Pasword" class="control-label">Password</label>
                                <input asp-for="Pasword" class="form-control" />
                                <span asp-validation-for="Pasword" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-success float-right">Log in</button>
                                <a class="btn btn-secondary" asp-controller="Movie" asp-action="Index">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>