@using MovieTicket.Web.Repositories.Queries.ADONet.ActorQueries
@model MovieTicket.Web.Models.ViewModels.CountryVM.ReadCountryVM

@inject CountryActorsDataProvider actorsQuery;

@{
    ViewData["Title"] = "Country Details";
}

<head>
    <link href="@Url.Content("~/css/Countries/details.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="container country-details-container border">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="country-card">
                    <div class="country-card-header">
                        <h5 class="title">@Model.Name</h5>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <img src="@Model.PictureUrl" alt="@Model.PictureUrl">
                        </div>
                        <div class="col-md-8">
                            <div class="country-card-body">
                                <p style="margin-bottom:20px;" class="card-text"><strong>Iso: </strong>@Model.Iso</p>
                                <p style="margin-bottom:20px;" class="card-text"><strong>Nice name: </strong>@Model.Nicename</p>
                                <p style="margin-bottom:20px;" class="card-text"><strong>Iso3: </strong>@Model.Iso3</p>
                                <p style="margin-bottom:20px;" class="card-text"><strong>Num Code: </strong>@Model.NumCode</p>
                                <p style="margin-bottom:20px;" class="card-text"><strong>Phone Code: </strong>@Model.PhoneCode</p>
                                <p class="card-text  ">
                                    <b>Actors: </b>

                                    <div class="actor-list d-flex">
                                        @foreach (var actor in actorsQuery.GetActorsByCountryId(@Model.Id, 5))
                                        {
                                            <div class="actor-profile">
                                                <img src="@actor.PictureUrl" />
                                                <a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id">@actor.FirstName @actor.LastName</a>
                                            </div>
                                        }
                                    </div>

                                    <div>
                                        <a class="toggle-collapse" data-bs-toggle="collapse" href="#actorsCollapse" role="button" aria-expanded="false" aria-controls="actorsCollapse">
                                            <i class="bi bi-caret-down-fill"></i> Show All
                                        </a>
                                        <div class="collapse" id="actorsCollapse">
                                            <div class="actor-list row mt-3">
                                                @foreach (var actor in actorsQuery.GetActorsByCountryId(Model.Id, 100))
                                                {
                                                    <div class="col-6 col-md-3 col-lg-2-4 mb-4 d-flex justify-content-center">
                                                        <div class="actor-profile text-center">
                                                            <img class="img-fluid rounded-circle mb-2 img-test" src="@actor.PictureUrl" alt="@actor.FirstName @actor.LastName's picture" />
                                                            <a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id">@actor.FirstName @actor.LastName</a>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>

                                    </div>

                                </p>
                                <hr />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/Countries/details.js"></script>
</body>
