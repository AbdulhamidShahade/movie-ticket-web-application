@model List<MovieTicket.Web.Models.ViewModels.CountryVM.ReadCountryVM>

<head>
    <link href="@Url.Content("~/css/Countries/userIndex.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="container">
        <div class="main-title" style="padding-bottom:10px;">
            <h1>Countries</h1>
        </div>
        <div class="row row-cols-1 row-cols-md-5 g-4">
            @foreach (var country in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <a asp-controller="Cinemas" asp-action="MoviesByCinema" asp-route-id="@country.Id"><img src="@country.PictureUrl" class="card-img-top" alt="@country.Name" style="width: 100%; height: 150px; object-fit: cover;"></a>
                        <div class="card-header">
                            <h5 class="text-center">@country.Name</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">@country.NumCode</li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="~/js/Countries/userIndex.js"></script>
</body>